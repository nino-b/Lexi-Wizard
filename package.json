{
  "name": "lexi-wizard",
  "version": "1.0.0",
  "description": "Lexi Wizard app by Nino Burtchuladze",
  "scripts": {
    "start": "parcel src/index.html",
    "start:browser": "cross-env BROWSER_ENV=true parcel build src/index.html",
    "start:node": "cross-env NODE_ENV=true parcel build proxyServer.mjs",
    "server": "node server/proxyServer.mjs",
    "dev": "concurrently \"npm run server\" \"npm run start\"",
    "build": "parcel build src/index.html",
    "test": "jest"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/nino-b/Lexi-Wizard.git"
  },
  "keywords": [
    "LexiWizard"
  ],
  "author": "\"Nino Burtchuladze\"",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/nino-b/Lexi-Wizard/issues"
  },
  "homepage": "https://github.com/nino-b/Lexi-Wizard#readme",
  "devDependencies": {
    "@parcel/transformer-inline-string": "^2.12.0",
    "concurrently": "^8.2.2",
    "nodemon": "^3.1.3",
    "parcel": "^2.12.0",
    "parcel-reporter-static-files-copy": "^1.5.3",
    "rimraf": "^5.0.7"
  },
  "dependencies": {
    "body-parser": "^1.20.2",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.19.2",
    "node-fetch": "^3.3.2"
  },
  "extends": "@parcel/config-default",
  "reporters": [
    "...",
    "parcel-reporter-static-files-copy"
  ],
  "staticFiles": {
    "staticPath": "static"
  }
}
